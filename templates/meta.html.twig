<meta name="description" content="{% if metaDescription is defined %}{{ metaDescription }}{% else %}{% endif %}">
<meta name="keywords" content="">

<meta property="og:url" content="{{ app.request.uri }}"/>
<meta property="og:site_name" content="Evok design, agence de design industriel" />
<meta property="og:type" content="website" />
<meta property="og:title" content="{% if metaOgTitle is defined %}{{ metaOgTitle }}{% else %}{% endif %}" />
<meta property="og:description" content="{% if metaOgDescription is defined %}{{ metaOgDescription }}{% else %}{% endif %}" />
<meta property="og:image" content="{% if metaOgImage is defined %}{{ metaOgImage }}{% else %}{% endif %}" />
<meta property="og:image:type" content="image/{% if metaOgImageFormat is defined %}{{ metaOgImageFormat }}{% else %}{% endif %}" />
<meta property="og:image:width" content="{% if metaOgImageWidth is defined %}{{ metaOgImageWidth }}{% else %}{% endif %}" />
<meta property="og:image:height" content="{% if metaOgImageHeight is defined %}{{ metaOgImageHeight }}{% else %}{% endif %}" />

