{% extends 'baseAdmin.html.twig' %}

{% block title %}Espace d'administration{% endblock %}
{% block stylesheets %}
    {{parent()}}
    <link rel="stylesheet" href="{{ asset('plugins/bootstrap/css/signin.css') }}">
{% endblock %}
{% block body %}

    <div class="container administration">
        <div class="card shadow p-3 mb-5 rounded">
            <div class="card-body">
                <img src="{{ asset('img/logo.png') }}" alt="Logo Evok">
                <form method="post" class="form-signin">
                    {% if error %}
                        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                    {% endif %}

                    <h1 class="h4 mb-3 font-weight-normal text-secondary">Espace d'administration</h1>

                    <div class="row">
                        <div class="col-12">
                            <label for="inputEmail" class="sr-only">Email</label>
                            <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" placeholder="Email" required autofocus>
                        </div>
                    </div>
                    <div class="row mt-1">
                        <div class="col-12">
                            <label for="inputPassword" class="sr-only">Password</label>
                            <input type="password" name="password" id="inputPassword" class="form-control" placeholder="Mot de passe" required>
                        </div>
                    </div>


                    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                    {#
                        Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
                        See https://symfony.com/doc/current/security/remember_me.html

                        <div class="checkbox mb-3">
                            <label>
                                <input type="checkbox" name="_remember_me"> Remember me
                            </label>
                        </div>
                    #}

                    <button class="btn mt-2 btn-primary" type="submit">
                        Connexion
                    </button>
                </form>
            </div>
        </div>

    </div>

{% endblock %}
