<form method="post" class="d-inline" action="{{ path('actualites_delete', {'id': actualite.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ actualite.id) }}">
    <button class="btn btn-danger"><i class="fa fa-trash"></i></button>
</form>
