{% extends 'baseAdmin.html.twig' %}

{% block title %}Liste des actualités{% endblock %}
{% block body %}
        {% include 'admin/menu.html.twig' %}

    <div class="container">
        <div class="row">
            <div class="col mb-2 mt-2 text-left">
                <h1>Liste des actualités</h1>
                <a href="{{ path('actualites_new') }}"><button class="btn btn-primary"><i class="fal fa-plus"></i> Ajouter une actualités</button></a>
            </div>
        </div>
        <table class="table">
            <thead>
            <tr>
                <th class="text-left">Titre</th>
                <th >Date de publication</th>
                <th class="text-right">Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for actualite in actualites %}
                <tr>
                    <td class="text-left">{{ actualite.titre }}</td>
                    <td> {{ actualite.date|date('d/m/Y')}}</td>
                    <td class="text-right">
                        <a href="{{ path('actualites_show', {'slug': actualite.slug}) }}"><button class="btn btn-secondary"><i class="fa fa-eye"></i></button></a>
                        <a href="{{ path('actualites_edit', {'id': actualite.id}) }}"><button class="btn btn-warning "><i class="fa fa-pen"></i></button></a>
                        {{ include('actualites/_delete_form.html.twig', {'id' : actualite.id}) }}
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="4">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>


{% endblock %}
