{% extends 'baseAdmin.html.twig' %}

{% block title %}Editer une actualité{% endblock %}

{% block body %}
    {% include 'admin/menu.html.twig' %}

    <div class="container">
        <div class="row mb-2">
            <div class="col text-left">
                <a href="{{ path('actualite_index_admin') }}" class="btn btn-secondary"><i class="fa fa-chevron-left"></i> Retour à la liste</a>
            </div>
        </div>
        <div class="row mt-3">
            <div class="col">
                <h1>Modifier {{ actualite.titre }}</h1>
            </div>
        </div>
        <div class="row">
            <div class="col">
                {{ include('actualites/_form.html.twig', {'button_label': 'Modifier', 'attr' : {'class' : 'btn btn-success'}}) }}
            </div>
        </div>
    </div>

{% endblock %}
