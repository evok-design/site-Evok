{% extends 'baseAdmin.html.twig' %}

{% block title %}Liste des catégories{% endblock %}
{% block body %}
    {% include 'admin/menu.html.twig' %}

    <div class="container">
        <div class="row">
            <div class="col mb-2 mt-2 text-left">
                <h1>Liste des catégories</h1>
                <a href="{{ path('categorie_new') }}"><button class="btn btn-primary"><i class="fal fa-plus"></i> Ajouter une catégorie</button></a>
                <a href="{{ path('bloc_new') }}"><button class="btn btn-dark"><i class="fal fa-plus"></i> Ajouter une grande catégorie</button></a>
            </div>
        </div>

        <table class="table">
            <thead>
            <tr>
                <th class="text-left">Titre</th>
                <th class="text-right">Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for categorie in categories %}
                <tr>
                    <td class="text-left">{{ categorie.label }}</td>
                    <td class="text-right">
                        {#<a href="{{ path('categorie_show', {'slug': categorie.slug}) }}"><button class="btn btn-secondary"><i class="fa fa-eye"></i></button></a>#}
                        <a href="{{ path('categorie_edit', {'slug': categorie.slug}) }}"><button class="btn btn-warning "><i class="fa fa-pen"></i></button></a>
                        {{ include('categorie/_delete_form.html.twig', {'slug' : categorie.slug}) }}
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="4">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>


{% endblock %}
