{% extends 'baseAdmin.html.twig' %}

{% block title %}Liste des Articles de presse{% endblock %}
{% block body %}
    {% include 'admin/menu.html.twig' %}

    <div class="container">
        <div class="row">
            <div class="col mb-2 mt-2 text-left">
                <h1>Liste des articles de presse</h1>
                <a href="{{ path('presse_a_new_admin') }}"><button class="btn btn-primary"><i class="fal fa-plus"></i> Ajouter un article de presse</button></a>
            </div>
        </div>
        <table class="table" id="tableMessage">
            <thead>
            <tr>
                <th class="text-left">Titre</th>
                <th class="text-left">site internet | lien article</th>
                <th class="text-left">Prévisualisation</th>
                <th class="text-center">Date de création</th>
                <th class="text-center">Actions</th>
            </tr>
            </thead>
            <tbody>
            <div class="error alert alert-error" style="display: none">Une erreur est survenue</div>
            {% for presse in presse_as %}
                {% set image = '/uploads/presseA/'~presse.image %}
                <tr data-id="{{ presse.id }}">
                    <td class="text-left">{{ presse.titre }}</td>
                    <td class="text-left">{{ presse.lienSite }}</td>
                    <td class="text-left"><img style="width: 80px;"  src='{{ image }}'></td>
                    <td class="text-center">{{presse.createdAt | date("d/m/Y", "Europe/Paris")}}</td>
                    <td class="text-center">
                        {#<a href="{{ path('presse_a_show_admin', {'id': presse.id}) }}"><button class="btn btn-secondary"><i class="fa fa-eye"></i></button></a>#}
                        <a href="{{ path('presse_a_edit_admin', {'id': presse.id}) }}"><button class="btn btn-warning "><i class="fa fa-pen"></i></button></a>
                        {{ include('admin/presseA/_delete_form.html.twig', {'id' : presse.id}) }}
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="4">0 trouvé</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>


{% endblock %}

