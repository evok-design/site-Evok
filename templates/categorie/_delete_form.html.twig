<form method="post" class="d-inline" action="{{ path('categorie_delete', {'slug': categorie.slug}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ categorie.slug) }}">
    <button class="btn btn-danger"> <i class="fa fa-trash"></i> </button>
</form>
